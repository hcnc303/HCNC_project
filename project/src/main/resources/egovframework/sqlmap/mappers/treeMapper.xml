<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="egovframework.example.hcnc.service.TreeMapper">

	<!-- 게시글 목록 조회 -->
	<select id="selectTree" resultType="egovframework.example.hcnc.vo.TreeVO">
		select * from tree
		<where>
			<if test="searchType=='year' and keyword != null and keyword != ''">
				and year like concat ('%',#{keyword},'%')
			</if>
			<if test="searchType=='type' and keyword != null and keyword != ''">
				and type like concat ('%',#{keyword},'%')
			</if>
			<if test="searchType=='title' and keyword != null and keyword != ''">
				and title like concat ('%',#{keyword},'%')
			</if>
		</where>
		order by no desc
		limit #{startList}, #{listSize}
	</select>
	
	<!-- 게시글 갯수 -->
	<select id="getBoardListCnt" resultType="integer">
		select count(*) as listCnt
		from tree
		<where>
			<if test="keyword != null and keyword != ''">
				<if test="searchType=='year'">
					and year like concat('%',#{keyword},'%')
				</if>
				<if test="searchType=='type'">
					and type like concat('%',#{keyword},'%')
				</if>
				<if test="searchType=='title'">
					and title like concat('%',#{keyword},'%')
				</if>
			</if>
		</where>
	</select>
	
	<!-- 게시글 상세보기 -->
	<select id="selectDetail" parameterType="Integer" resultType="egovframework.example.hcnc.vo.TreeVO">
		select * from tree
		where no=#{no}
	</select>
	
	<!-- 게시글 삽입 -->
	<insert id="insertTree" parameterType="egovframework.example.hcnc.vo.TreeVO">
		insert into tree(type, title, cont, edate)
		values(#{type}, #{title}, #{cont}, now())
	</insert>
	
	<!-- 게시글 수정 -->
	<update id="updateTree" parameterType="egovframework.example.hcnc.vo.TreeVO">
		update tree set
		type=#{type}, title=#{title}, cont=#{cont}
		where no=#{no}
	</update>
	
	<!-- 게시글 삭제 -->
	<delete id="deleteTree" parameterType="Integer">
		delete from tree
		where no=#{no}
	</delete>
</mapper>

